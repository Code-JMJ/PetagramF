<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="224dp"
            android:layout_height="162dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/left"
            android:layout_marginTop="@dimen/top" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/imgFoto"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/left">


            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:src="@drawable/hueso1" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/pnombre"
                android:textSize="@dimen/dcvnombre"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNumLike"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/left"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/btnNumLike"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/hueso2" />


        </LinearLayout>

            </RelativeLayout>


</androidx.cardview.widget.CardView>